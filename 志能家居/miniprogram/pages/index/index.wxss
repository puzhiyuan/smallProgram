/**index.wxss**/
.root-wrapper{
  min-height: 100vh;
  overflow: hidden;
}

.header-wrapper{
  background-color: rgba(0, 0, 0, 0.6);
  background-blend-mode: multiply;
  height: 35vh;
  color: #fff;
}

.header-content-wrapper{
  padding: 110px 15px 20px 15px;
}

.header-title{
  display: flex;
  justify-content: space-between;
}

.header-text{
  font-size: 32px;
  font-weight: 400;
  display: flex;
  justify-content: space-between;
}

.weather-advice{
  margin-top: 25px;
  font-size: 14px;
}
.body-wrapper{
  padding: 15px 15px 0 15px;
}
.data-wrapper{
  margin-top: 30px;
  display: flex;
  justify-content: space-around;
}

.data{
  background-color: #2f2f2f;
  width: 160px;
  height: 82px;
  display: flex;
  justify-content: space-between;
  border-radius: 15px;
  transition: transform 0.01s ease-in-out;
}
.data:active{
  transform: scale(0.95);
}


.data-left{
  margin-top: 10px;
  margin-left: 15px;
}

.data-logo>image{
  width: 40px;
  height: 40px;
}

.data-title{
  font-size: 16px;
  color: #7f7f7f;
  /* justify-content: center; */
}

.data-value{
  font-size: 25px;
  margin-top: 15px;
  margin-right: 12px;
}


.signature{
  /* margin-top: px; */
  text-align: center;
  font-size: 15px;
  color: #fff;
}

/* 拖动进度条 */
.process_wrap {
  padding-top: 70px;
  position: relative;
  width: 400rpx;
  margin-left: 60rpx;
}
.process_wrap .line {
  width: 400rpx;
  height: 2rpx;
  background: #B5B8C2;
}
 
.process_wrap .active_line {
  /* padding-top: 70px; */
  position: absolute;
  top: 132rpx;
  left: 0;
  max-width: 400rpx;
  height: 8rpx;
  background: linear-gradient(83deg, #84B3FF 0%, #116DF6 100%);
}
 
.process_wrap .spot {
  position: absolute;
  top: 110rpx;
  left: 0;
  width: 40rpx;
  height: 40rpx;
  background: #1A73FF;
  box-shadow: 0px 2px 10px 0px rgba(196, 200, 204, 0.5);
  border: 2px solid #FFFFFF;
  border-radius: 100%;
}